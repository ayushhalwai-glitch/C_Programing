#include <stdio.h>

int main() {
    int arr[100], n, i;
    int *ptr;

    // Input size of array
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input elements
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Pointer points to the last element
    ptr = &arr[n - 1];

    // Print in reverse using pointer
    printf("Array in reverse order:\n");
    for(i = n; i > 0; i--) {
        printf("%d ", *ptr);
        ptr--;  // Move pointer backwards
    }

    return 0;
}







